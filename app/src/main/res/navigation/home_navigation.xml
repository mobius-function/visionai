<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/home_navigation"
    app:startDestination="@id/homeLandingFragment">

    <fragment
        android:id="@+id/homeLandingFragment"
        android:name="com.yuvraj.visionai.ui.home.fragments.LandingFragment"
        android:label="fragment_home_landing"
        tools:layout="@layout/fragment_home_landing" >
        <action
            android:id="@+id/action_landingFragment_to_eyeTestingFragment"
            app:destination="@id/homeEyeTestingFragment" />
        <action
            android:id="@+id/action_homeLandingFragment_to_hyperopiaTestingFragment"
            app:destination="@id/hyperopiaTestingFragment" />
        <action
            android:id="@+id/action_homeLandingFragment_to_astigmatismTestingFragment"
            app:destination="@id/astigmatismTestingFragment" />
    </fragment>
    <fragment
        android:id="@+id/homeEyeTestingFragment"
        android:name="com.yuvraj.visionai.ui.home.fragments.EyeTestingFragment"
        android:label="fragment_home_eye_testing"
        tools:layout="@layout/fragment_home_eye_testing" />
    <fragment
        android:id="@+id/hyperopiaTestingFragment"
        android:name="com.yuvraj.visionai.ui.home.fragments.HyperopiaTestingFragment"
        android:label="fragment_hyperopia_testing"
        tools:layout="@layout/fragment_home_hyperopia_testing" />
    <fragment
        android:id="@+id/astigmatismTestingFragment"
        android:name="com.yuvraj.visionai.ui.home.fragments.AstigmatismTestingFragment"
        android:label="fragment_home_astigmatism_testing"
        tools:layout="@layout/fragment_home_astigmatism_testing" />
</navigation>